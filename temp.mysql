SELECT date_of_order, avg(amount) FROM orders
WHERE amount>100
GROUP BY date_of_order;

SELECT customer_id, avg(amount) FROM orders
GROUP BY customer_id;

SELECT customer_id, avg(amount) FROM orders
WHERE (SELECT avg(amount) FROM orders) > 100
GROUP BY customer_id;

SELECT first_name, last_name, avg(amount) FROM orders INNER JOIN customers
ON orders.order_id = customers.customer_id
GROUP BY first_name;

